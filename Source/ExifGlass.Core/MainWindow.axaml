<Window
    x:Class="ExifGlass.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app="using:ExifGlass"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:exiftool="using:ExifGlass.ExifTools"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ExifGlass"
    Width="600"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DragDrop.AllowDrop="True"
    Icon="Assets\exifglass_icon_512.ico"
    TransparencyLevelHint="Mica"
    mc:Ignorable="d">

    <Window.Resources>
        <ContextMenu
            x:Key="MnuColumnOptions"
            Name="MnuColumnOptions"
            >
            <MenuItem
                Padding="10,0"
                FontWeight="SemiBold"
                Header="列可见性选项"
                IsHitTestVisible="false"
                IsTabStop="false"
                IsTextSearchEnabled="false" />
            <MenuItem
                x:Name="MnuToggleColumnIndex"
                Padding="10,0"
                Click="MnuColumnOptions_Click"
                Header="索引"
                IsChecked="{Binding Source={x:Static app:Config.ShowColumnIndex}, Mode=OneWay}">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding $parent.IsChecked, Mode=OneWay}" IsHitTestVisible="false" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                x:Name="MnuToggleColumnTagId"
                Padding="10,0"
                Click="MnuColumnOptions_Click"
                Header="标签ID"
                IsChecked="{Binding Source={x:Static app:Config.ShowColumnTagId}, Mode=OneWay}">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding $parent.IsChecked}" IsHitTestVisible="false" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                x:Name="MnuToggleColumnTagName"
                Padding="10,0"
                Click="MnuColumnOptions_Click"
                Header="标签名称"
                IsChecked="{Binding Source={x:Static app:Config.ShowColumnTagName}, Mode=OneWay}">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding $parent.IsChecked}" IsHitTestVisible="false" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                x:Name="MnuToggleColumnTagValue"
                Padding="10,0"
                Click="MnuColumnOptions_Click"
                Header="标签文本"
                IsChecked="{Binding Source={x:Static app:Config.ShowColumnTagValue}, Mode=OneWay}">
                <MenuItem.Icon>
                    <CheckBox IsChecked="{Binding $parent.IsChecked}" IsHitTestVisible="false" />
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>


        <ContextMenu
            x:Key="MnuContext"
            Name="MnuContext"
            
            Opening="MnuContext_Opening">
            <MenuItem
                Padding="10,0"
                Click="BtnCopy_Click"
                Header="复制"
                InputGesture="Ctrl+C" />
            <MenuItem
                x:Name="MnuExtractData"
                Padding="10,0"
                Click="MnuExtractData_Click"
                Header="导出数据" />
        </ContextMenu>
    </Window.Resources>


    <Grid RowDefinitions="*, Auto">
        <Border Name="TopContent" Grid.Row="0">
            <Grid RowDefinitions="*">
                <Border
                    Name="BoxError"
                    Grid.Row="0"
                    Padding="15,10,15,10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <SelectableTextBlock
                            Name="TxtError"
                            FontFamily="Consolas"
                            SelectionBrush="{DynamicResource SelectionColorBrush}"
                            TextWrapping="Wrap" />
                    </ScrollViewer>
                </Border>

                <Border
                    Name="BoxExifGrid"
                    Grid.Row="1"
                    Margin="15,10,15,0"
                    Background="{DynamicResource SystemControlBackgroundAltMediumBrush}"
                    BorderBrush="{DynamicResource SystemControlForegroundBaseLowBrush}"
                    BorderThickness="1"
                    CornerRadius="5">
                    <DataGrid
                        Name="DtGrid"
                        MinHeight="0"
                        x:DataType="exiftool:ExifTagItem"
                        AutoGenerateColumns="False"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="True"
                        ClipboardCopyMode="None"
                        ContextMenu="{StaticResource MnuColumnOptions}"
                        FontSize="13"
                        Foreground="{DynamicResource SystemBaseMediumHighColor}"
                        IsReadOnly="True">
                        <DataGrid.Styles>
                            <!--  Style cell content  -->
                            <Style Selector="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                                <Setter Property="Padding" Value="0,5,0,5" />
                                <Setter Property="VerticalAlignment" Value="Top" />
                            </Style>
                        </DataGrid.Styles>


                        <DataGrid.Columns>

                            <DataGridTemplateColumn
                                Width="Auto"
                                CanUserResize="False"
                                IsVisible="{Binding Source={x:Static app:Config.ShowColumnIndex}}"
                                SortMemberPath="Index"
                                Tag="Index">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource SystemBaseMediumHighColor}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="exiftool:ExifTagItem">
                                        <Border Background="Transparent" ContextMenu="{StaticResource MnuContext}">
                                            <TextBlock
                                                Padding="10,5,10,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Text="{Binding Index}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTemplateColumn
                                Width="Auto"
                                CanUserResize="False"
                                IsVisible="{Binding Source={x:Static app:Config.ShowColumnTagId}}"
                                SortMemberPath="TagId"
                                Tag="TagId">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource SystemBaseMediumHighColor}">
                                            标签ID
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="exiftool:ExifTagItem">
                                        <Border Background="Transparent" ContextMenu="{StaticResource MnuContext}">
                                            <TextBlock
                                                Padding="10,5,10,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Text="{Binding TagId}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTemplateColumn
                                Width="Auto"
                                MinWidth="110"
                                IsVisible="{Binding Source={x:Static app:Config.ShowColumnTagName}}"
                                SortMemberPath="TagName"
                                Tag="TagName">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource SystemBaseMediumHighColor}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">
                                            标签名称
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="exiftool:ExifTagItem">
                                        <Border Background="Transparent" ContextMenu="{StaticResource MnuContext}">
                                            <TextBlock
                                                Padding="10,5,10,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Text="{Binding TagName}"
                                                TextWrapping="Wrap" />

                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                            <DataGridTemplateColumn
                                Width="*"
                                MinWidth="150"
                                IsVisible="{Binding Source={x:Static app:Config.ShowColumnTagValue}}"
                                SortMemberPath="TagValue"
                                Tag="TagValue">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock
                                            FontSize="13"
                                            FontWeight="SemiBold"
                                            Foreground="{DynamicResource SystemBaseMediumHighColor}"
                                            TextTrimming="CharacterEllipsis"
                                            TextWrapping="NoWrap">
                                            标签文本
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate DataType="exiftool:ExifTagItem">
                                        <Border Background="Transparent" ContextMenu="{StaticResource MnuContext}">
                                            <TextBlock
                                                Padding="10,5,10,5"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Text="{Binding TagValue}"
                                                TextWrapping="Wrap" />
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>



        <StackPanel
            Name="Footer"
            Grid.Row="1"
            Margin="15,15,15,15"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Orientation="Vertical">

            <Border
                MinHeight="40"
                MaxHeight="80"
                Margin="0,0,0,15"
                Padding="10,5,0,5"
                Background="{DynamicResource SystemRevealListLowColor}"
                CornerRadius="3">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <SelectableTextBlock
                        Name="TxtCmd"
                        FontFamily="Consolas"
                        SelectionBrush="{DynamicResource SelectionColorBrush}"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>


            <Grid ColumnDefinitions="*, Auto, Auto, Auto">
                <Button
                    Name="BtnOpenFile"
                    Grid.Column="0"
                    Classes="accent"
                    HotKeyManager.HotKey="Ctrl+O"
                    ToolTip.Placement="Top"
                    ToolTip.Tip="打开文件… (Ctrl+O)"
                    ToolTip.VerticalOffset="-5">
                    打开文件…
                </Button>


                <Button
                    Name="BtnCopy"
                    Grid.Column="1"
                    Margin="10,0,0,0"
                    IsEnabled="False"
                    ToolTip.Placement="Top"
                    ToolTip.Tip="复制所选文本 (Ctrl+C)"
                    ToolTip.VerticalOffset="-5">
                    复制所选文本
                </Button>
                <DropDownButton
                    Name="BtnExport"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    Content="另存为…"
                    
                    IsEnabled="False"
                    ToolTip.Placement="Top"
                    ToolTip.Tip="另存为…"
                    ToolTip.VerticalOffset="-5">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="TopEdgeAlignedRight">
                            <MenuItem
                                Name="MnuExportText"
                                
                                Header="文本文件…"
                                InputGesture="Ctrl+D1" />
                            <MenuItem
                                Name="MnuExportCsv"
                                
                                Header="CSV文件…"
                                InputGesture="Ctrl+D2" />
                            <MenuItem
                                Name="MnuExportJson"
                                
                                Header="JSON文件…"
                                InputGesture="Ctrl+D3" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>

                <DropDownButton
                    Name="BtnMenu"
                    Grid.Column="3"
                    Margin="10,0,0,0"
                    Content="菜单…"
                    
                    ToolTip.Placement="Top"
                    ToolTip.Tip="菜单"
                    ToolTip.VerticalOffset="-5">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="TopEdgeAlignedRight">
                            <MenuItem
                                Name="MnuSettings"
                                
                                Header="设置…"
                                InputGesture="Ctrl+," />
                            <MenuItem Header="-" />
                            <MenuItem
                                Name="MnuCheckForUpdate"
                                
                                Header="检查更新…" />
                            <MenuItem
                                Name="MnuAbout"
                                
                                Header="关于…"
                                InputGesture="F1" />
                            <MenuItem Header="-" />
                            <MenuItem
                                Name="MnuExit"
                                
                                Header="退出"
                                InputGesture="Escape" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </Grid>
        </StackPanel>
    </Grid>



</Window>
